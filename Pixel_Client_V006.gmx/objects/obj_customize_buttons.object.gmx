        <arguments>
          <argument>
            <kind>1</kind>
            <string>///adjust customizations

switch (button)
    {
        default:
            //nothing
        break;    
//=====================================================
        case 1:
            obj_colorPicker.coloring = "hair";
            break;
        case 2:
            obj_colorPicker.coloring = "outfitTop";
            break;
//=====================================================
    
        case 3: //hair up
            if ( obj_playerSelect.hair &lt; hairMax )
                obj_playerSelect.hair++;
            else obj_playerSelect.hair = 1;
        break;
        
        case 4: //hair down
            if ( obj_playerSelect.hair &gt; 1 )
                obj_playerSelect.hair--;
            else obj_playerSelect.hair = hairMax;
        break;
        
        case 5: //outfitTop up
            if ( obj_playerSelect.outfitTop &lt; outfitTopMax )
                obj_playerSelect.outfitTop++;
            else obj_playerSelect.outfitTop = 1;
        break;
        
        case 6: //outfitTop down
            if ( obj_playerSelect.outfitTop &gt; 1 )
                obj_playerSelect.outfitTop--;
            else obj_playerSelect.outfitTop = outfitTopMax;
        break;
        
//=====================================================
        case 7: //extra button swap Left
            switch(obj_colorPicker.coloring)
                {
                    case "hair":
                        obj_colorPicker.coloring = "skin"
                        break;
                    case "outfitTop":
                        obj_colorPicker.coloring = "hair"
                        break;
                    case "skin":
                        obj_colorPicker.coloring = "outfitTop"
                        break;
                
                }
            break;
        
        case 8: //extra button swap Right
            switch(obj_colorPicker.coloring)
                {
                    case "skin":
                        obj_colorPicker.coloring = "hair"
                        break;
                    case "hair":
                        obj_colorPicker.coloring = "outfitTop"
                        break;
                    case "outfitTop":
                        obj_colorPicker.coloring = "skin"
                        break;
                
                }
            break;
//=============================================================
        case 9: //skin up
            if ( obj_playerSelect.skin &lt; skinMax )
                obj_playerSelect.skin++;
            else obj_playerSelect.skin = 1;
        break;
        
        case 10: //skin down
            if ( obj_playerSelect.skin &gt; 1 )
                obj_playerSelect.skin--;
            else obj_playerSelect.skin = skinMax;
        break;


    }
    
global.hairCustom = obj_playerSelect.hair;
global.outfitTopCustom = obj_playerSelect.outfitTop;
global.skinCustom = obj_playerSelect.skin;
//global.outfitBottomCustom = obj_playerSelect.outfitBottom;
</string>
